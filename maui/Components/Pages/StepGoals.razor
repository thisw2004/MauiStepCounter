@*@page "/stepgoals"
@using maui.components.ViewModels
@inject StepgoalViewModel ViewModel
@inject NavigationManager Navigation

<h1>Stepgoals</h1>

@if (ViewModel.Blogs.Any())
{
        @foreach (var blog in ViewModel.Blogs)
        {
            <div class="card" style="width:300px; border:  3px GrayText; border-radius: 10px; background-color:paleturquoise; margin:20px;" >
                <h3>Date: @blog.Date</h3>
                <h3>Goal: @blog.Goal</h3>
                <h3>Progress: @blog.Progress\@blog.Goal</h3>
                <h3>Achieved: @blog.Achieved</h3>
                            
                <img alt="edit" style="width:50px;mix-blend-mode: multiply; height: 50px;" src="./Icons/edit.png"/>
                <img  alt="delete" style="mix-blend-mode: multiply; width:50px; height: 50px;" src="./Icons/cross.png"/>
            </div>
            
        }
}
else
{
    <p>No stepgoals found.</p>
}

@code {
    
    private void NavigateToDetail(int id)
    {
        Navigation.NavigateTo($"blog/{id}");
    }
}*@